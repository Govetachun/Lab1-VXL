#ifndef INC_TIMER_H_
#define INC_TIMER_H_

#define TICK 10

struct Timer {
private:
	int counter;
	bool signal;

public:
	Timer();

	void setTimer(int duration);
	void run();
	bool hasSignal();
} Timer;


#endif /* INC_TIMER_H_ */
